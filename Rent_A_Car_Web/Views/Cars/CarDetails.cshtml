
@model Rent_A_Car_Web.Data.Car;
@{
    ViewData["Title"] = $"Car details";
    
}
<div class="container h-100 w-100" style="margin-top:5rem;" >
   <div style="display:flex;justify-content:space-evenly;">
        <div>
        <img style="width:31.438rem; height:20.938rem;" src=@Html.DisplayFor(model => model.ImageUrl)  />
    </div>
    <div>
        <h1>@Html.DisplayFor(model => model.Brand) @Html.DisplayFor(model => model.Model)</h1>
        <h2>
            @Html.DisplayFor(model => model.Price) $
        </h2>
        <p>
            @Html.DisplayFor(model => model.Description)
        </p>
        <form  asp-controller="Cars" asp-action="RentCar"  asp-route-id="@Model.Id">
            <div asp-validation-summary="All" class="form-group">
                <label asp-for="RentStart" class="control-label"> Rent start date</label>
                <input asp-for="@Model.RentStart" value="" class="form-control" />
                @*<span asp-validation-for="@Model.RentStart" class="text-danger"></span>*@
            </div>
            <div  class="form-group">
                <label asp-for="RentEnd" class="control-label">Rent end date</label>
                <input asp-for="RentEnd" value="" class="form-control" />
            </div>
           <div class="form-group">
                <input type="submit" value="Rent" class="btn btn-primary" />
           </div>
        </form>
        
    </div>
   </div>
   
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}